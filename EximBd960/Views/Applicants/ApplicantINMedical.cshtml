@model IEnumerable<EximBd960.Models.Applicant>
@{
	ViewBag.Title = "ApplicantINMedical";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel panel-body">
	<div class="row">
		<div class="col-md-4">
			@Html.DropDownList("Country", null, "--Select Country--", htmlAttributes: new { @class = "form-control" })
		</div>
		<div class="col-md-4">
			@Html.DropDownList("Company", null, "--Select Company--", htmlAttributes: new { @class = "form-control" })
		</div>
		<div class="col-md-4">
			@Html.DropDownList("Agents", null, "--Select Agent--", htmlAttributes: new { @class = "form-control" })
		</div>
	</div>
</div>

@foreach (var applicants in Model)
{
	<div class="panel panel-body" >
		<div class="row">
			<div class="col-sm-4">
				<img src=@Url.Content(@applicants.ImageURL) width="100" height="100" alt="Applicant Name"/>
                <p>@applicants.Child</p>
            </div>
			<div class="col-sm-4">
				@Html.Label("Name", htmlAttributes: new { @class = "control-label col-md-2" })
				@Html.DisplayFor(modelItem=>applicants.ApplicantName,new {@class="col-md-2" })
			</div>
		</div>
	</div>
}

